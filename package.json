{
  "name": "testflow",
  "version": "1.0.0",
  "description": "AI-driven Playwright automation testing system",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "testflow": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "server": "tsx src/server/index.ts",
    "server:dev": "tsx watch src/server/index.ts",
    "test": "pnpm dev run",
    "test:api": "npx vitest run src/server/__tests__",
    "test:api:watch": "npx vitest watch src/server/__tests__",
    "test:api:ui": "npx vitest --ui"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "ai",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.22.1",
    "gray-matter": "^4.0.3",
    "openai": "^4.77.1",
    "playwright": "^1.48.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@vitest/ui": "^4.0.15",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  }
}
